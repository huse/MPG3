<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.hosen.khp.mymy.SecondFragment">

    <custum.VerticalScrollview
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_weight="1"
                    android:hint="Mile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mile"
                    android:id="@+id/textView"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:layout_weight="1"
                    android:hint="Gallon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallon"
                    android:id="@+id/textView2"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:id="@+id/linearLayout6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText6"
                    android:layout_weight="1"
                    android:hint="Price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:id="@+id/textView66"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="36dp"
                android:layout_gravity="center"
                android:id="@+id/linearLayout3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Calculate"
                    android:id="@+id/button3"
                    android:layout_gravity="top|left"
                    android:background="@drawable/gloss_button_9_patch"
                    android:layout_weight=".3" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Send to"
                    android:id="@+id/button4"
                    android:background="@drawable/gloss_button_9_patch"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/linearLayout3"
                    android:layout_alignEnd="@+id/linearLayout3"
                    android:layout_gravity="top|right"
                    android:layout_weight=".7" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:id="@+id/linearLayout4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mile per Gallon: "
                    android:id="@+id/textView3"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:paddingLeft="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:layout_marginTop="18dp"
                android:id="@+id/linearLayout5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liter per 100 Km:"
                    android:id="@+id/textView5"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:paddingLeft="20dp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/linearLayout5"
                android:id="@+id/linearLayout8"
>


                <TextView
                    android:text="Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:id="@+id/label2"
                    android:paddingTop="10dp"
                    android:layout_weight="0.15"

                    android:layout_toRightOf="@+id/label1">
                </TextView>
                <TextView
                    android:text="Mile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:id="@+id/label3"
                    android:paddingTop="10dp"
                    android:layout_weight="0.166"

                    android:layout_toRightOf="@+id/label2">
                </TextView>
                <TextView
                    android:text="Gallon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:id="@+id/label4"
                    android:layout_weight="0.166"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/label3" >
                </TextView>
                <TextView
                    android:text="Price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:id="@+id/label5"
                    android:textStyle="bold"
                    android:layout_weight="0.166"

                    android:layout_toRightOf="@+id/label4"
                    >
                </TextView>
                <TextView
                    android:text="MPG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:id="@+id/label6"
                    android:textStyle="bold"
                    android:layout_weight="0.166"
                    android:layout_toRightOf="@+id/label5"

                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/textView15"
                    android:layout_weight="0.19"/>


            </LinearLayout>




                <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:id="@+id/listView"
                        android:layout_below="@+id/linearLayout8"

                       />

<!--                <com.google.android.gms.ads.AdView
                        android:id="@+id/adView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-6744562395705685/7534033855">
                    </com.google.android.gms.ads.AdView>-->
        </RelativeLayout>
    </custum.VerticalScrollview>


</FrameLayout>